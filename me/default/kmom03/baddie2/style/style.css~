body{

}

#content {
	/* If #content position is absolute, the baddie position will be given in reference to it's parent, which is #content
	 * Makes it easier to do collision calculations */
	position: absolute;
	width: 400px;
	height: 300px;
	border: solid 1px #000;
}

#baddie{
	/* Baddies postition must be absolute, otherwise we can't move him by changing top and left */
	position: absolute;
	height: 50px;
	width: 50px;
	background: url("../img/Kyubi.png");
	background-size: 50px;
}

.baddie-right {
	-webkit-transform: rotateY(180deg);
}

.baddie-left {
	-webkit-transform: rotateY(180deg);
}